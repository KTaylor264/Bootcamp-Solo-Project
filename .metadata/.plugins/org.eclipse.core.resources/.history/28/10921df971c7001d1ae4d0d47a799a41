				else
				{
					var check = document.getElementById("LIGHT");
					check.checked = false;
				}
			}
			break;
			case 8:
			{
				if (boolAttribs[i] == true)
				{
					var check = document.getElementById("DARK");
					check.checked = true;
				}
				else
				{
					var check = document.getElementById("DARK");
					check.checked = false;
				}
			}
			break;
		}
	}
}